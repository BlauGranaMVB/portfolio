// USLOVIYA i CIKLi
// operator 'if'

if (a > 0) {
   System.out.println("Условие выполнено");
}

// operator 'if + else'

if (a > 0) {
   System.out.println("Glavnoe uslovie vipolneno");
} else if (a < 0) {
   System.out.println("Uslovie vipolneno");
} else if (a == 0) {
   System.out.println("Uslovie vipolneno");
} else {
   System.out.println("Uslovie ne vipolneno");
}

// ternarniy operator
a == 0 || a > 0 || a < 0 ? "равно" : "не равно";

//operator switch
int grade = 3;

class Main {
  public static void main(String[] args) {
    int grade = 3;

    switch (grade) {
      case 5:
        System.out.println("Otlichno!");
        break;
      case 4:
        System.out.println("khorosho!");
        break;
      case 3:
        System.out.println("Sredne!");
        break;
      case 2:
        System.out.println("Mozhno luchshe!");
        break;
      case 1:
        System.out.println("Pridetsya peredelat'.");
        break;
      default:
        System.out.println("Nevernaya otsenka");
    }
  }
}



//cikl 'while'

while (true) {
  
}

class Main {
  public static void main(String[] args) {
    int a = 0;
    while (a <= 10) {
      System.out.println(a++);
    }
  }
}
